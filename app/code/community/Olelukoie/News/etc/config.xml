<?xml version="1.0"?>
<config>
    <modules>
        <Olelukoie_News>
            <version>0.0.1</version>
        </Olelukoie_News>
    </modules>
    <global>
        <models>
            <olelukoie_news>
                <class>Olelukoie_News_Model</class>
                <resourceModel>news_resource</resourceModel>
            </olelukoie_news>
            <news_resource>
                <class>Olelukoie_News_Model_Resource</class>
                <entities>
                    <news>
                        <table>olelukoie_news</table>
                    </news>
                </entities>
            </news_resource>
        </models>
        <helpers>
            <olelukoie_news>
                <class>Olelukoie_News_Helper</class>
            </olelukoie_news>
        </helpers>
        <blocks>
            <olelukoie_news>
                <class>Olelukoie_News_Block</class>
            </olelukoie_news>
        </blocks>
        <resources>
            <olelukoie_news_setup>
                <setup>
                    <modules>Olelukoie_News</modules>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </olelukoie_news_setup>
        </resources>
        <events>
            <before_news_item_display>
                <observer>
                    <olelukoie_news>
                        <class>olelukoie_news/observer</class>
                        <method>beforeNewsDisplayed</method>
                    </olelukoie_news>
                </observer>
            </before_news_item_display>
        </events>
    </global>
    <frontend>
        <routers>
            <olelukoie_news>
                <use>standard</use>
                <args>
                    <module>Olelukoie_News</module>
                    <frontName>news</frontName>
                </args>
            </olelukoie_news>
            <layout>
                <updates>
                    <olelukoie_news>
                        <file>olelukoie_news.xml</file>
                    </olelukoie_news>
                </updates>
            </layout>
        </routers>
    </frontend>
</config>