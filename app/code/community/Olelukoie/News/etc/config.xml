<?xml version="1.0"?>
<config>
    <modules>
        <Olelukoie_News>
            <version>0.0.1</version>
        </Olelukoie_News>
    </modules>
    <global>
        <models>
            <olelukoie_news>
                <class>Olelukoie_News_Model</class>
                <resourceModel>news_resource</resourceModel>
            </olelukoie_news>
            <news_resource>
                <class>Olelukoie_News_Model_Resource</class>
                <entities>
                    <news>
                        <table>olelukoie_news</table>
                    </news>
                </entities>
            </news_resource>
        </models>
        <helpers>
            <olelukoie_news>
                <class>Olelukoie_News_Helper</class>
            </olelukoie_news>
        </helpers>
        <blocks>
            <olelukoie_news>
                <class>Olelukoie_News_Block</class>
            </olelukoie_news>
        </blocks>

        <resources>
            <news_setup>
                <setup>
                    <module>Olelukoie_News</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </news_setup>

            <news_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </news_write>

            <news_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </news_read>
        </resources>

        <events>
            <before_news_item_display>
                <observer>
                    <olelukoie_news>
                        <class>olelukoie_news/observer</class>
                        <method>beforeNewsDisplayed</method>
                    </olelukoie_news>
                </observer>
            </before_news_item_display>
        </events>
    </global>
    <frontend>
        <routers>
            <olelukoie_news>
                <use>standard</use>
                <args>
                    <module>Olelukoie_News</module>
                    <frontName>news</frontName>
                </args>
            </olelukoie_news>
            <layout>
                <updates>
                    <olelukoie_news>
                        <file>olelukoie_news.xml</file>
                    </olelukoie_news>
                </updates>
            </layout>
        </routers>
    </frontend>
    <Admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Olelukoie_News before="Mage_adminhtml">Olelukoie_News_adminhtml</Olelukoie_News>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </Admin>
    <adminhtml>
        <layout>
            <updates>
                <olelukoie_news>
                    <file>olelukoie_news.xml</file>
                </olelukoie_news>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <news>
            <view>
                <enabled>1</enabled>
                <items_per_page>20</items_per_page>
                <days_difference>3</days_difference>
            </view>
        </news>
    </default>
</config>